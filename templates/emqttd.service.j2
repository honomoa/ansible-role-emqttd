[Unit]
Description=emqttd service
After=network.target

[Service]
Type=forking
WorkingDirectory={{ emqttd_root }}/emqttd
ExecStart={{ emqttd_root }}/emqttd/bin/emqttd start
ExecStop={{ emqttd_root }}/emqttd/bin/emqttd stop
User={{ emqttd_user }}
Restart=always
RestartSec=10
LimitNOFILE={{ limit_nofile }}

[Install]
WantedBy=multi-user.target
